@{
    ViewBag.Title = "Tra cứu đơn hàng";
}
<div class="container">
    <ul class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i></a></li>
        <li><a href="/CheckOut/SearchOrder">Tìm kiếm</a></li>
    </ul>
    <div class="row">
        <div id="content" class="col-sm-12">
            @using (Html.BeginForm("ViewOrder", "CheckOut", FormMethod.Get))
            {
                @Html.ValidationSummary("", new { @class = "custom-color-msg" })
                <div class="col-sm-2" style="padding-left:0">
                    <label class="control-label label-search" for="input-search">Mã đơn hàng</label>
                    <div class="">
                        <input type="text" name="orderId" value="@ViewBag.orderId" id="orderId" class="form-control" />
                    </div>
                </div>
                <div class="col-sm-10">
                    <label class="control-label label-search" for="input-search">Email</label>
                    <div class="input-search" style="margin-top:0;margin-bottom:0;">
                        <input type="text" name="email" value="@ViewBag.email" id="email" class="form-control" />
                    </div>
                </div>
                <input type="submit" value="Tìm kiếm" id="button-search" class="btn btn-primary" />

                if (ViewBag.notfound != null)
                {
                    <p>Không tìm thấy đơn hàng.</p>
                }
            }
        </div>
    </div>
</div>
