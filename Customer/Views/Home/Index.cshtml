<div id="content" class="col-sm-12 nopadding">
    <script type="text/javascript" src="/Assets/javascript/bossthemes/cloud-zoom/cloud-zoom.1.0.3.js"></script> 
    <div class="popular-cate">
        @if (ViewBag.HotProducts != null)
        {
            foreach (var item in (List<Product>)ViewBag.HotProducts)
            {
                <div class="box-content col-md-2 col-sm-4 col-xs-6">
                    <div class="cate-image">
                        <a title="Malesuada" href="/Product/Detail/@item.Id"><img alt="@item.Name" src="@Constant.AdminAddress@item.Avatar" class="img-responsive" /></a>
                        <div class="cate-name-hover">
                            <a title="Malesuada" href="/Product/Detail/@item.Id">@item.SellPrice.labelFormatCurrency()</a>
                            <hr>
                            @if (item.Quantity > 0)
                            {
                                <span class="bt-items"> chỉ còn @item.Quantity sản phẩm</span>
                            }
                            else
                            {
                                <span class="bt-items"> Tạm hết hàng</span>
                            }

                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div class="bt-featured-pro bt-nprolarge-tabs not-animated" data-animate="fadeInUp" data-delay="300">
        <div id="tabcontent0" class="box-heading title htabs">
            <a href="#bt_procate_00" data-id="1">Khuyến mại</a>
            <a href="#bt_procate_01" data-id="2">Bán chạy</a>
            <a href="#bt_procate_02" data-id="3">Xem nhiều</a>
