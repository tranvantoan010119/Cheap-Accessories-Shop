@using Common
@using Services.Models
@using Customers.Ultilities
@model Product



<div class="bt-item-extra element-4">
    <div class="product-thumb bt-item transition">
        <div class="image">
            <a href="/Product/Detail/@Model.Id"><img src="@Constant.AdminAddress@Model.Avatar" alt="@Model.Name" title="@Model.Name" class="img-responsive" /></a>
            @*<div class="rating">
                <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i></span>
                <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i></span>
                <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i></span>
                <span class="fa fa-stack fa-hidden"><i class="fa fa-star fa-stack-2x"></i></span>
                <span class="fa fa-stack fa-hidden"><i class="fa fa-star fa-stack-2x"></i></span>
            </div>*@
            <div class="button-group bt-button-group hidden-xs">
                <a class="btn-cart" href="#" data-productid="@Model.Id" data-stock="@(Model.Quantity)"><i class="fa fa-shopping-cart"></i></a>
                @*<a class="btn-wishlist" title="Add to Wish List" href="#"><i class="fa fa-heart"></i></a>*@
                @*<a class="btn-compare" title="Compare this Product" href="#"><i class="fa fa-retweet"></i></a>*@
                @*<button class="sft_quickshop_icon" title="Quick View"><span class="qs_icon"><i class="fa fa-search"></i></span></button>*@
            </div>
        </div>
        <div class="small_detail">
            <div class="caption">
                <div class="name"><a href="/Product/Detail/@Model.Id">@Model.Name</a></div>
                <p class="description">
                    @Model.Description
                </p>
                <p class="price">
                    @if (Model.SaleOff > 0)
                    {
                        if (Model.StartDate != null && Model.EndDate != null && DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate)
                        {
                            <span class="price-new">@Model.SaleOff.labelFormatCurrency()</span>
                            <span class="price-old">@Model.Price.labelFormatCurrency()</span>
                        }
                        else
                        {
                            <span class="price-new">@Model.Price.labelFormatCurrency()</span>
                        }
                    }
                    else
                    {
                        <span class="price-new">@Model.Price.labelFormatCurrency()</span>
                    }
                </p>
            </div>
        </div>
        <div class="button-group visible-xs">
            <a href="#" class="btn-cart" data-productid="@Model.Id" data-stock="@(Model.Quantity > 0)" ><i class="fa fa-shopping-cart"></i>Thêm vào giỏ</a>
            <a class="btn-wishlist" title="Yêu thích" href="#"><i class="fa fa-heart"></i></a>
            <a class="btn-compare" title="So sánh" href="#"><i class="fa fa-retweet"></i></a>
        </div>
    </div>
</div>

