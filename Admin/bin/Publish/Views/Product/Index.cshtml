
@{
    ViewBag.Title = "Sản phẩm";
}

@section css{
    <style>
        .table.table-condensed tbody tr td {
            padding: 0px 5px !important;
        }
    </style>
}

@section currentNavBar{
    <li>
        <a href="/Product" class="active">Sản phẩm</a>
    </li>
}

@section scripts{
    <script src="~/Assets/Js/Controller/Product.js"></script>
}

<div class="container-fluid container-fixed-lg">
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <div class="panel-title">
                Danh sách sản phẩm
            </div>
            <div class="export-options-container pull-right"></div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Mã sản phẩm</label>
                    <input type="text" class="form-control" name="code" id="code">
                </div>
                <div class="form-group col-md-6">
                    <label>Tên sản phẩm</label>
                    <input type="text" class="form-control" name="productName" id="productName">
                </div>
                <div class="form-group col-md-2">
                    <label>Tìm kiếm</label>
                    <span id="btnSearchProduct" class="form-control input-group-addon" style="border-left:1px solid rgba(0,0,0,0.07);color:rgba(98,98,98,0.9);">
                        <i class="pg-search"></i>
                    </span>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-condensed" id="condensedTable">
                    <thead>
                        <tr>
                            <td>Hình ảnh</td>
                            <td>Code</td>
                            <td style="width:40%;">Tên</td>
                            <td>Trạng thái</td>
                            <td>Set Hot</td>
                            <td>Actions</td>
                        </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>
            </div>
            <div id="pager" class="pagination pagination-right">
                <ul id="paginationUL"></ul>
            </div>
        </div>
    </div>
</div>
