
@{
    ViewBag.Title = "Thống kê";
    var actionName = ViewContext.RouteData.Values["action"];
}

@section css{
    <style>
        .table.table-condensed tbody tr td {
            padding: 0px 5px !important;
        }
    </style>
}

@section currentNavBar{
    <li>
        <a href="/Product" class="active">Sản phẩm</a>
    </li>
<li>
    <a href="#" class="active">Thống kê</a>
</li>
}

@section scripts{
    <script src="~/Assets/Js/Controller/Product.js"></script>
}


<input type="hidden" id="actionName" value="@actionName" />
<div class="container-fluid container-fixed-lg">
    <div class="panel panel-transparent">
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Thống kê theo</label>
                    <select id="typeOfStatistic" class="form-control" style="padding-bottom:0px;padding-top:0px;">
                        <option value=""> --- Select option ---</option>
                        <option value="inventory"> Số lượng tồn kho</option>
                        <option value="bestseller"> Số lượng bán</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label>Thống kê</label>
                    <span id="btnStatisticProduct" class="form-control input-group-addon" style="border-left:1px solid rgba(0,0,0,0.07);color:rgba(98,98,98,0.9);">
                        <i class="pg-search"></i>
                    </span>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-condensed" id="condensedTable">
                    <thead>
                        <tr>
                            <td>Hình ảnh</td>
                            <td>Code</td>
                            <td>Tên</td>
                            <td id="colType">Số lượng</td>
                        </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>
            </div>
            <div id="pager" class="pagination pagination-right">
                <ul id="paginationUL"></ul>
            </div>
        </div>
    </div>
</div>
