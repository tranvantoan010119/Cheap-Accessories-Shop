@model List<Services.Models.Product>

@foreach (var item in Model)
{
    <tr>
        <td><img src="@UrlHandler.ResolveUrl(item.Avatar)" alt="@item.Name" style="width:45px; height:45px;" /></td>
        <td>@item.Code</td>
        <td>@item.Name</td>
        <td><input type="checkbox" class="cbStatus" @(item.Published == true ? "checked" : "") data-id="@item.Id" /></td>
        <td><input type="checkbox" class="cbIsHot" @(item.IsHot == true ? "checked" : "") data-id="@item.Id" /></td>
        <td><a href="/Product/Edit?id=@item.Id">Sửa</a></td>
    </tr>
}
