@using Common
@model List<Services.Models.Order>
@{
    var listStatus = ExtendMethod.get_OrderStatus();
 }

@foreach (var item in Model)
{
    <tr>
        <td><a href="#" class="linkOrderDetail" data-id="@item.Id" data-email="@item.Email">@item.Id</a></td>
        <td>@item.Email</td>
        <td>@item.TotalAmount.GetValueOrDefault().labelFormatCurrency()</td>
        <td>
            <select class="form-control optStatus" style="padding-bottom:0;padding-top:0;" data-id="@item.Id" @(item.Status > 3 ? "disabled" : "")>
                @foreach (var jtem in listStatus)
                {
                    if (item.Status == jtem.Id)
                    {
                        <option value="@jtem.Id" selected>@jtem.Name</option>
                    }
                    else
                    {
                        <option value="@jtem.Id">@jtem.Name</option>
                    }
                }
            </select>
        </td>
    </tr>
}
