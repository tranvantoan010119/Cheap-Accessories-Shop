
@{
    ViewBag.Title = "Danh sách ngành hàng";
}

@section css{
    <style>
        .table.table-condensed tbody tr td {
            padding: 12px 5px !important;
        }
    </style>
}

@section scripts{
    <script src="~/Assets/Js/Controller/Category.js"></script>
<script>
        $(document).ready(function(){
            var msg = $('#Result').val();
            if(msg != ""){
                toastr["success"](msg);
            };
        });
</script>
}


@section currentNavBar{
    <li>
        <a href="/Category" class="active">Danh mục</a>
    </li>
}

<div class="container-fluid container-fixed-lg">
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <div class="panel-title">
                Danh sách ngành hàng
            </div>
            <div class="export-options-container pull-right"></div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-hover table-condensed" id="condensedTable">
                    <thead>
                        <tr>
                            <td>Tên</td>
                            <td>Danh mục cha</td>
                            <td>Thứ tự</td>
                            <td>Trạng thái</td>
                            <td>Actions</td>
                        </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>
            </div>
            <div id="pager" class="pagination pagination-right">
                <ul id="paginationUL"></ul>
            </div>
        </div>
    </div>
</div>
<input type="hidden" name="Result" id="Result" value="@TempData["Result"]" />

