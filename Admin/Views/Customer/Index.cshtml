
@{
    ViewBag.Title = "Khách hàng";
}

@section css{
    <style>
        .table.table-condensed tbody tr td{
            padding: 12px 5px !important;
        }
    </style>
}

@section scripts{
    <script src="~/Assets/Js/Controller/Customer.js"></script>
<script>
        $(document).ready(function(){
            var msg = $('#Result').val();
            if(msg != ""){
                toastr["success"](msg);
            };
        });
</script>
}
@section currentNavBar{
    <li>
        <a href="/Customer" class="active">Khách hàng</a>
    </li>
}
<div class="container-fluid container-fixed-lg">
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <div class="panel-title">
            </div>
            <div class="export-options-container pull-right"></div>
            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group col-md-4">
                    <label>Tên khách hàng</label>
                    <input type="text" class="form-control" name="fullname" id="fullname">
                </div>
                <div class="form-group col-md-6">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" id="email">
                </div>
                <div class="form-group col-md-2">
                    <label>Tìm kiếm</label>
                    <span id="btnSearchCustomer" class="form-control input-group-addon" style="border-left:1px solid rgba(0,0,0,0.07);color:rgba(98,98,98,0.9);">
                        <i class="pg-search"></i>
                    </span>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-condensed" id="condensedTable">
                    <thead>
                        <tr>
                            <td>Email</td>
                            <td>Họ tên</td>
                            <td>Số điện thoại</td>
                            <td>Địa chỉ</td>
                            <td>Trạng thái</td>
                            <td>Actions</td>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                       
                    </tbody>
                </table>
            </div>
            <div id="pager" class="pagination pagination-right">
                <ul id="paginationUL"></ul>
            </div>
        </div>
    </div>
    </div>
<input type="hidden" name="Result" id="Result" value="@TempData["Result"]" />